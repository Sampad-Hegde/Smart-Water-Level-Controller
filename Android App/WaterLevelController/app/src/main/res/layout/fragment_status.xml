<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2F2F30">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.john.waveview.WaveView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:above_wave_color="#2196F3"
                app:blow_wave_color="#3F51B5"
                app:progress="0"
                android:id="@+id/overhead_wave"
                app:wave_height="middle"
                app:wave_hz="normal"
                app:wave_length="middle"
                android:background="@drawable/border"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Over Head Tank : 00 %"
                android:id="@+id/overhead_txt"
                android:textColor="#03A9F4"
                android:textSize="20dp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.john.waveview.WaveView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:above_wave_color="#2196F3"
                app:blow_wave_color="#3F51B5"
                app:progress="0"
                app:wave_height="middle"
                app:wave_hz="normal"
                android:id="@+id/underground_wave"
                app:wave_length="middle"
                android:background="@drawable/border"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Under Ground Tank : 00 %"
                android:id="@+id/underground_txt"
                android:textColor="#03A9F4"
                android:textSize="20dp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pump Status : OFF"
            android:textColor="#009688"
            android:textSize="25dp"
            android:textAlignment="center"
            android:id="@+id/pump_status"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>