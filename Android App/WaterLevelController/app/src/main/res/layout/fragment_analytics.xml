<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2A2A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/graph"
            android:background="#939393"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/border">

            <TableRow
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E91E63"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="@string/Tittle1"
                    android:gravity="center_horizontal"
                    android:layout_weight="4"
                    android:background="@drawable/border"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E91E63"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="@string/Tittle2"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/border"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:text="Today"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:background="@drawable/border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:id="@+id/dailyusage"
                    android:layout_weight="1"
                    android:text="10 Hrs"
                    android:gravity="center_horizontal" />

            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:text="This Month"
                    android:layout_weight="4"
                    android:gravity="center_horizontal" />

                <TextView
                    android:background="@drawable/border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:id="@+id/monthlyusage"
                    android:textAlignment="center"
                    android:text="10 HRS"
                    android:gravity="center_horizontal" />

            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_weight="4"
                    android:textAlignment="center"
                    android:text="This Month Unit Usage"
                    android:gravity="center_horizontal" />

                <TextView
                    android:background="@drawable/border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/unitusage"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text="10 Untits"
                    android:gravity="center_horizontal" />

            </TableRow>
        </TableLayout>


    </LinearLayout>


</RelativeLayout>